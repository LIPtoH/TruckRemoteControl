<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.PreferenceCategory android:title="@string/connection">
        <androidx.preference.CheckBoxPreference
            android:defaultValue="false"
            android:enabled="true"
            android:key="defaultServer"
            android:summary="@string/connect_to_default_on_startup_summary"
            android:summaryOff="@string/connect_to_default_on_startup_summary_off"
            android:summaryOn="@string/connect_to_default_on_startup_summary_on"
            android:title="@string/connect_to_default_on_startup_title" />

        <androidx.preference.EditTextPreference
            android:dependency="defaultServer"
            android:dialogTitle="@string/def_server_ip_title"
            android:enabled="true"
            android:key="serverIP"
            android:summary="@string/def_server_ip_summary"
            android:title="@string/def_server_ip_title" />

        <androidx.preference.EditTextPreference
            android:defaultValue="18250"
            android:dependency="defaultServer"
            android:dialogTitle="@string/def_server_port_dialog_title"
            android:enabled="true"
            android:key="serverPort"
            android:summary="@string/def_server_port_summary"
            android:title="@string/def_server_port_title" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="@string/other">
        <androidx.preference.CheckBoxPreference
            android:defaultValue="false"
            android:key="deadzone"
            android:summary="@string/deadzone_summary"
            android:title="@string/deadzone_title" />
    </androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>
